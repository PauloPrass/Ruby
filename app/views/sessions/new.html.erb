<p id="alert"><%= alert %></p>
<div class="container">
  <div class="div_login">
    <h1>Login</h1>
    <div class="div_black">
      <%= form_tag sessions_path do |form| %>
        <div class="form-group">
          <p><%= "E-mail" %></p>
          <%= text_field_tag :email %>
        </div>  
        <div class="form-group">
          <p><%= "Senha" %></p>
          <%= password_field_tag :password %>
        </div>  
        <div class="actions">
          <%= submit_tag "Login" %>
        </div>
      <% end %>
    </div>
  </div>
</div>