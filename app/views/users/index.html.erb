<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Usuários</h1>

  <table class="table table-dark">
    <thead>
      <tr>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to 'Mostrar', user %></td>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
          <td><a href="#" onclick='display(<%=user.id%>)'>Excluir</a></td>
          <a id="delete<%=user.id%>" href="/users/delete/<%=user.id%>" method="get"></a>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button type="button" class="btn btn-dark">
    <%= link_to 'Novo Usuário', new_user_path %>
  </button>
</div>

<script>
  function display(id){
    if (confirm('Tem certeza que deseja excluir o registro?')) {
      window.location=document.getElementById(`delete${id}`).href;
    }
  }
</script>