<p id="notice"><%= notice %></p>

<div class="container">

  <h1>Livros</h1>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="row">Título</th>
        <th scope="row">Descrição</th>
        <th scope="row">Imagem</th>
        <th scope="row">Autor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= image_tag book.url_image, width:70, height:100%></td>
          <td><%= book.author %></td>
          <td><%= link_to 'Mostrar', book %></td>
          <td><%= link_to 'Editar', edit_book_path(book) %></td>
          <td><%= link_to 'Excluir', book, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button type="button" class="btn btn-dark">
    <%= link_to 'Novo Livro', new_book_path %>
  </button>
</div>